{
  "variables": {
    "iso_url": "D:/software/windows/win10_1709_ee_eval_en_us_x64.iso",
    "iso_checksum_type": "sha256",
    "iso_checksum": "3D39DD9BD37DB5B3C80801AE44003802A9C770A7400A1B33027CA474A1A7C691",
    "autounattend": "./answer_files/10-EE-EVAL/Autounattend.xml",
    "headless": "false",
    "cpus": "3",
    "memory_size": "8192",
    "disk_size": "61440"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{user `headless`}}",
      "boot_wait": "2m",
      "output_directory": "E:/packer-out/win10",
      "name": "win10",
      "winrm_insecure": true,
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "1h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows10_64",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/configure-winrm.ps1",
        "./scripts/Enable-RemoteDesktop.ps1",
        "./scripts/vm-guest-tools.bat"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--accelerate2dvideo", "on"],
        ["modifyvm", "{{.Name}}", "--clipboard",         "bidirectional"],
        ["modifyvm", "{{.Name}}", "--cpus",              "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--draganddrop",       "hosttoguest"],
        ["modifyvm", "{{.Name}}", "--memory",            "{{user `memory_size`}}"],
        ["modifyvm", "{{.Name}}", "--vram",              "128"]
      ]
    }
  ]
}
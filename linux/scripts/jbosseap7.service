[Unit]
Description=JBoss EAP Systemctl script
After=NetworkManager.service

[Service]
Type=forking
ExecStart=/data/app/redhat/product/jboss_current/bin/init.d/jboss-eap-rhel.sh start
ExecStop=/data/app/redhat/product/jboss_current/bin/init.d/jboss-eap-rhel.sh stop
ExecReload=/data/app/redhat/product/jboss_current/bin/init.d/jboss-eap-rhel.sh restart
PIDFile=/var/run/jboss-eap/jboss-eap.pid

[Install]
WantedBy=multi-user.target